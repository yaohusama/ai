<view class ='grey-part header'> 
   <view bindtap='personal_func'> <image class="pink-circle" src="{{profile.avatarUrl}}" mode="cover"></image>
</view>
  <view class='font-header'>
    <view>当前定位： {{inputPos}}</view>
    <view>当前时间： {{time}}</view>
  </view>
</view>
<view class='middle'>
<view class='bathroom-part'>
<block wx:for="{{brpos}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}">
    <!-- console.log(br_pos); -->
    <view class='row'>
      <view  wx:if='{{item[0]==1}}' class='square purple' bindtap='purpleAlready' id='{{idx}}left'></view>
      <view wx:else bindtap='stillWhite' id='{{idx}}left' class="square {{idx==chooseId&&chooseDir==0?'green':'white'}}"></view>
      <view wx:if='{{item[1]==1}}' class='square purple' bindtap='purpleAlready' id='{{idx}}right'></view>
      <view wx:else class="square {{idx==chooseId&&chooseDir==1?'green':'white'}}" bindtap='stillWhite' id='{{idx}}right' ></view>
    </view>
</block>
